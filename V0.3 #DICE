    while not Exit:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                Exit = True
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_ESCAPE:
                    MainMenu(crash,Exit,Manualbutton, Quitbutton,Startbutton,event,mousex,mousey)

                if P1 == True and Player1Class.Levenspunten <= 90:
                    P1 = False
                    P2 = True
                if P1 == True and event.key == pygame.K_1 and Player1Class.Levenspunten > 90:
                    outcome = RollDice()
                    rolledDice1 = True
                    diceDisplay = 5.0

                    print (event)

                    print(l1.Name)
                    P1 = False
                    P2 = True

                if P2 == True and Player2Class.Levenspunten <= 90:
                    P2 = False
                    P3 = True
                if P2 == True and event.key == pygame.K_2 and Player2Class.Levenspunten > 90:
                    outcome = RollDice()
                    rolledDice2 = True
                    diceDisplay = 5.0

                    print (event)


                    P2 = False
                    P3 = True
                    print(l2.Name)
                if P3 == True and Player3Class.Levenspunten <= 90:
                    P3 = False
                    P4 = True
                if P3 == True and event.key == pygame.K_3 and Player3Class.Levenspunten > 90:
                    outcome = RollDice()
                    rolledDice3 = True
                    diceDisplay = 5.0

                    print (event)


                    P3 = False
                    P4 = True
                    print(l3.Name)
                if P4 == True and Player4Class.Levenspunten <= 90:
                    P4 = False
                    P1 = True
                if P4 == True and event.key == pygame.K_4 and Player4Class.Levenspunten > 90:
                    outcome = RollDice()
                    rolledDice4 = True
                    diceDisplay = 5.0

                    print (event)


                    P4 = False
                    P1 = True
                    print(l4.Name)
                

        if(rolledDice1):
            for x in range(0,outcome):
                if l1.Name == "Pos41":
                    l1 = PlayerPosList1
                l1 = l1.tail
            if l1.Name == "Pos6" or l1.Name == "Pos16" or l1.Name == "Pos26" or l1.Name == "Pos36":
